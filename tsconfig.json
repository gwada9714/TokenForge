{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "types": [
      "vite/client",
      "vite-plugin-pwa/client"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "src",
    "tasks",
    "test",
    "typechain-types",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts/*.js",
    "scripts/*.cjs",
    "dist",
    "build"
  ]
}