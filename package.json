    "typescript": "^5.3.3",
    "util": "^0.12.5",
    "viem": "^2.22.7",
    "vite": "^5.0.0",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-plugin-pwa": "^0.21.1",
    "zod": "^3.24.1"
  },
  "scripts": {
    "prestart": "powershell -ExecutionPolicy Bypass -File ./scripts/cleanup.ps1",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:react": "jest --transformIgnorePatterns \"node_modules/(?!(@web3modal|@wagmi|wagmi|viem)/.)\" --env=jsdom",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:contracts": "hardhat test",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,sol,json,md}'",
    "type-check": "tsc --noEmit",
    "validate": "npm-run-all --parallel type-check lint test",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@web3modal|@wagmi|wagmi|viem)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
