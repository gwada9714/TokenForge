{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./scripts", "./test", "./hardhat.config.cjs"],
  "files": ["./hardhat.config.cjs"]
}
